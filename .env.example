# Environment Variables
# Copy this file to .env and fill in your actual values

# Monday.com API Token
# Get this from: Monday.com → Profile → Developers → My Access Tokens
MONDAY_API_TOKEN=your_monday_api_token_here

# Monday.com Signing Secret
# Get this from your Monday.com app settings
MONDAY_SIGNING_SECRET=your_signing_secret_here

# Status Column ID
# The ID of the status column you want to update
# You can find this by inspecting your board's columns via the Monday API
STATUS_COLUMN_ID=status

# Server Port (optional, defaults to 3000)
PORT=3000
